{
    "name": "Reader Sub",
    "version": "0.1",
    "description": "Reader Plugin for subscribe articles.",
    "background_page": "background.html",
    "icons": { 
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png" 
    },
    "content_scripts" : [{
        "matches" : [
            "http://*/*",
            "https://*/*"
        ],
        "js" : [
            "js/jquery.js",
            "js/jquery.hotkeys.js", 
            "js/contentscript.js", 
            "js/bootstrap.min.js"
        ],
        "css": ["css/tag.css", "css/custom.css"],
        "run_at" : "document_end",
        "all_frames" : false
    }],
    "permissions": [
        "tabs",
        "http://reader/*",
        "http://127.0.0.1/*"
    ],
    "browser_action": {
        "default_icon": "img/icon16.png",
        "default_title": "Collection - Reader"
    }
}
